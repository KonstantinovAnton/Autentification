<Window x:Class="Autentification.WindowForCode"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Autentification"
        mc:Ignorable="d"
        Title="WindowForCode" Height="450" Width="800"
        FontSize="20">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label HorizontalAlignment="Center">Введите код</Label>
            <TextBox Name="textBoxCode" Width="160"></TextBox>
            <Label Name="labelTime"></Label>
        </StackPanel>
    </Grid>
</Window>
